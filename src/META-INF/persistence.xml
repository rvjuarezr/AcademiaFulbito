<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="AcademiaFulbitoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>academiafulbito.modelo.entidades.Categoria</class>
    <class>academiafulbito.modelo.entidades.Alumno</class>
    <class>academiafulbito.modelo.entidades.Padre</class>
    <class>academiafulbito.modelo.entidades.Profesor</class>
    <class>academiafulbito.modelo.entidades.Usuario</class>
    <class>academiafulbito.modelo.entidades.Campeonato</class>
    <class>academiafulbito.modelo.entidades.Cancha</class>
    <class>academiafulbito.modelo.entidades.LugarEntrenamiento</class>
    <class>academiafulbito.modelo.entidades.Horario</class>
    <class>academiafulbito.modelo.entidades.Matricula</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bdacademiafulbito"/>
      <property name="javax.persistence.jdbc.password" value="${db.password}"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
